<h1>Create a new Restaurant</h1>

<%= simple_form_for(@restaurant) do |f| %>
<%= f.input :name %>
<%= f.input :address %>
<%= f.input :phone_number, label: 'Phone Number', placeholder: '0000 00000' %>
<%= f.select :category, collection: ['chinese', 'italian', 'japanese', 'french', 'belgian'] %>
<%= f.button :submit %>
<% end %>
